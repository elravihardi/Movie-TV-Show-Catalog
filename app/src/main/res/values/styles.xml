<resources
    xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.AppCompat.ActionBar" parent="ThemeOverlay.AppCompat">
        <item name="android:editTextColor">@color/colorGray</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
    </style>

    <style name="ToolbarTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MovieTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ContentDetailBold" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ContentDetail" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:textSize">16sp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="InfomartionError" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

</resources>
