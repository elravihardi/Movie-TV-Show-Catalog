<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/ibm_plex_sans_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ThemeOverlay.AppCompat.ActionBar" parent="ThemeOverlay.AppCompat">
        <item name="android:editTextColor">@color/colorGray</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semibold</item>
        <item name="android:windowTitleSize">22sp</item>
    </style>

    <style name="MovieTitle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ContentDetailBold" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

    <style name="InfomartionError" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkFont</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
    </style>

</resources>

